<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solo Leveling Workout Tracker</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <!-- Player Dashboard -->
        <div class="player-card">
            <div class="player-header">
                <h1><i class="fas fa-dragon"></i> SOLO TRAINING SYSTEM</h1>
                <div class="player-info">
                    <h2>PLAYER: <span id="playerName" contenteditable="true">ASHBORN</span></h2>
                    <p class="subtitle">The Weakest to Strongest Hunter</p>
                </div>
            </div>

            <div class="level-display">
                <div class="level-info">
                    <h3>LEVEL <span id="currentLevel">1</span></h3>
                    <div class="xp-container">
                        <div class="xp-label">
                            EXP: <span id="currentXP">0</span> / <span id="neededXP">100</span>
                        </div>
                        <div class="xp-bar">
                            <div class="xp-fill" id="xpFill">0%</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">üí™</div>
                    <h4>STRENGTH</h4>
                    <div class="stat-value" id="strengthStat">10</div>
                    <div class="stat-bar">
                        <div class="stat-fill" style="width: 50%"></div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">üèÉ‚Äç‚ôÇÔ∏è</div>
                    <h4>STAMINA</h4>
                    <div class="stat-value" id="staminaStat">10</div>
                    <div class="stat-bar">
                        <div class="stat-fill" style="width: 50%"></div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">‚ö°</div>
                    <h4>AGILITY</h4>
                    <div class="stat-value" id="agilityStat">10</div>
                    <div class="stat-bar">
                        <div class="stat-fill" style="width: 50%"></div>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">‚ù§Ô∏è</div>
                    <h4>VITALITY</h4>
                    <div class="stat-value" id="vitalityStat">10</div>
                    <div class="stat-bar">
                        <div class="stat-fill" style="width: 50%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Daily Quests Section -->
        <div class="quests-section">
            <h2><i class="fas fa-tasks"></i> DAILY QUESTS</h2>
            
            <div class="quest-list">
                <div class="quest-item" data-xp="25">
                    <div class="quest-info">
                        <h3>üî• Push-up Challenge</h3>
                        <p>Complete 50 push-ups</p>
                        <div class="quest-reward">+25 EXP</div>
                    </div>
                    <button class="quest-btn" onclick="completeQuest(25, 'strength')">
                        <i class="fas fa-check"></i> Complete
                    </button>
                </div>
                
                <div class="quest-item" data-xp="30">
                    <div class="quest-info">
                        <h3>üèÉ‚Äç‚ôÇÔ∏è Running Mission</h3>
                        <p>Run 5km</p>
                        <div class="quest-reward">+30 EXP</div>
                    </div>
                    <button class="quest-btn" onclick="completeQuest(30, 'stamina')">
                        <i class="fas fa-check"></i> Complete
                    </button>
                </div>
                
                <div class="quest-item" data-xp="20">
                    <div class="quest-info">
                        <h3>üí™ Strength Training</h3>
                        <p>3 sets of weight lifting</p>
                        <div class="quest-reward">+20 EXP</div>
                    </div>
                    <button class="quest-btn" onclick="completeQuest(20, 'strength')">
                        <i class="fas fa-check"></i> Complete
                    </button>
                </div>
                
                <div class="quest-item" data-xp="50" data-boss="true">
                    <div class="quest-info">
                        <h3>üêâ BOSS BATTLE: Weekend Warrior</h3>
                        <p>Complete all weekly workouts</p>
                        <div class="quest-reward">+50 EXP</div>
                    </div>
                    <button class="quest-btn boss-btn" onclick="completeQuest(50, 'all')">
                        <i class="fas fa-crown"></i> Challenge Boss
                    </button>
                </div>
            </div>
        </div>

        <!-- Workout Log -->
        <div class="log-section">
            <h2><i class="fas fa-scroll"></i> WORKOUT LOG</h2>
            <div class="log-input">
                <input type="text" id="workoutInput" placeholder="Add custom workout (e.g., '100 Sit-ups')">
                <input type="number" id="xpInput" placeholder="XP Value" min="5" max="100">
                <button onclick="addCustomWorkout()"><i class="fas fa-plus"></i> Add</button>
            </div>
            <div class="log-history" id="workoutLog">
                <!-- Log items will appear here -->
            </div>
        </div>

        <!-- Achievements -->
        <div class="achievements-section">
            <h2><i class="fas fa-trophy"></i> ACHIEVEMENTS</h2>
            <div class="achievements-grid">
                <div class="achievement unlocked">
                    <div class="achievement-icon">üéÆ</div>
                    <p>System Activated</p>
                </div>
                <div class="achievement locked">
                    <div class="achievement-icon">üí™</div>
                    <p>First 100 Push-ups</p>
                </div>
                <div class="achievement locked">
                    <div class="achievement-icon">üèÉ‚Äç‚ôÇÔ∏è</div>
                    <p>Marathon Runner</p>
                </div>
                <div class="achievement locked">
                    <div class="achievement-icon">üëë</div>
                    <p>Shadow Monarch</p>
                </div>
            </div>
        </div>

        <!-- Reset Button -->
        <button class="reset-btn" onclick="resetProgress()">
            <i class="fas fa-redo"></i> Reset Progress
        </button>
    </div>

    <!-- Level Up Modal -->
    <div id="levelUpModal" class="modal">
        <div class="modal-content">
            <h2>üéâ LEVEL UP!</h2>
            <p>You have reached <span id="newLevel"></span>!</p>
            <p>All stats increased by +2!</p>
            <button onclick="closeModal()">Continue Training</button>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>
